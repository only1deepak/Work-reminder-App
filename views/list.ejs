<%- include("header") -%>

    <div class="box" id="heading">
        <h1 ><%= listTitle %></h1>
    </div>
    <div class="box">

        <% newListItem.forEach(element => { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" value = "<%=element._id%>" onChange="this.form.submit()" name = "deletedItem">
                    <p><%= element.name %></p>
                </div>
                <input type="hidden" name="listName" value = "<%= listTitle %>"></input>
            </form>
            
       <% }); %>

      

           
        <form class="item " action="/" method="POST">
            
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="listItem" value= <%= listTitle %>>+</button>
    </div>
    
        </form>


<%- include("footer") -%>